<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/my_drawer_layout"
    android:fitsSystemWindows="true"
    tools:context=".Activities.ReaderActivity">

    <FrameLayout
        android:background="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.edgar.yurihouse.Views.ZoomRecyclerView
            android:id="@+id/zlv_reader_layout"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <include layout="@layout/layout_reader_information"/>

    </FrameLayout>

    <include layout="@layout/layout_drawer_content" />

</android.support.v4.widget.DrawerLayout>